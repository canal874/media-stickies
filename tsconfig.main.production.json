{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "target": "ES2019",
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": [
    "src/main.ts",
    "src/modules_common/*",
    "src/modules_main/*",
  ],
  "exclude": [
    "src/modules_renderer/*",
    "src/settings/*"
  ]
}
